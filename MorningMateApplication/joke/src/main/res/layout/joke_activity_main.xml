<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JokeMainActivity">

    <Button
        android:id="@+id/getJokeButton3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="#B00ECC00"
        android:onClick="retrieveJoke"
        android:text="@string/tell_joke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/getJokeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/jokeTextBox"
        android:layout_width="293dp"
        android:layout_height="149dp"
        android:layout_above="@+id/getJokeButton"
        android:layout_alignEnd="@+id/getJokeButton"
        android:layout_alignRight="@+id/getJokeButton"
        android:layout_marginBottom="328dp"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/getJokeButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:background="#B00ECC00"
        android:onClick="goToJokeHistory"
        android:text="@string/joke_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />


    <TextView
        android:id="@+id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16sp"
        android:text="Pitch"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/SB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/SB1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/TV2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30sp"/>

    <TextView
        android:id="@+id/TV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16sp"
        android:text="Speed"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/SB2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/SB2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/getJokeButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30sp"/>

    <Button
        android:id="@+id/getJokeButton2"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:background="#B00ECC00"
        android:onClick="retrieveJoke"
        android:text="Say it!"
        app:layout_constraintBottom_toTopOf="@+id/getJokeButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30sp" />



</androidx.constraintlayout.widget.ConstraintLayout>